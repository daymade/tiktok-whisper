{
  "dashboard": {
    "id": null,
    "uid": "v2t-distributed",
    "title": "v2t Distributed Transcription Dashboard",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": { "text": "Down", "color": "red" },
                  "1": { "text": "Up", "color": "green" }
                },
                "type": "value"
              }
            ],
            "unit": "none"
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "id": 1,
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "value_and_name"
        },
        "targets": [
          {
            "expr": "up{job=\"v2t-workers\"}",
            "legendFormat": "{{node}} - {{instance}}",
            "refId": "A"
          }
        ],
        "title": "Worker Status",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "green", "value": 3 }
              ]
            }
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
        "id": 2,
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "targets": [
          {
            "expr": "sum(v2t_worker_providers_total)",
            "refId": "A"
          }
        ],
        "title": "Total Available Providers",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "id": 3,
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "targets": [
          {
            "expr": "sum(rate(temporal_workflow_completed_total[5m])) by (workflow_type)",
            "legendFormat": "{{workflow_type}} - Completed",
            "refId": "A"
          },
          {
            "expr": "sum(rate(temporal_workflow_failed_total[5m])) by (workflow_type)",
            "legendFormat": "{{workflow_type}} - Failed",
            "refId": "B"
          }
        ],
        "title": "Workflow Throughput",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "id": 4,
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(temporal_workflow_endtoend_latency_seconds_bucket[5m])) by (le, workflow_type))",
            "legendFormat": "{{workflow_type}} - p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(temporal_workflow_endtoend_latency_seconds_bucket[5m])) by (le, workflow_type))",
            "legendFormat": "{{workflow_type}} - p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(temporal_workflow_endtoend_latency_seconds_bucket[5m])) by (le, workflow_type))",
            "legendFormat": "{{workflow_type}} - p99",
            "refId": "C"
          }
        ],
        "title": "Workflow Latency",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 80 },
                { "color": "red", "value": 90 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "id": 5,
        "options": {
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "targets": [
          {
            "expr": "(sum(minio_disk_storage_used_bytes) / sum(minio_disk_storage_total_bytes)) * 100",
            "refId": "A"
          }
        ],
        "title": "MinIO Storage Usage",
        "type": "gauge"
      },
      {
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
        "id": 6,
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "right",
            "showLegend": true
          },
          "pieType": "donut",
          "tooltip": {
            "mode": "single"
          }
        },
        "targets": [
          {
            "expr": "sum(temporal_activity_schedule_to_start_latency_seconds_count) by (activity_type)",
            "legendFormat": "{{activity_type}}",
            "refId": "A"
          }
        ],
        "title": "Activity Distribution",
        "type": "piechart"
      },
      {
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "id": 7,
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          }
        },
        "targets": [
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) by (instance) * 100)",
            "legendFormat": "{{instance}} - CPU",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{instance}} - Memory",
            "refId": "B"
          }
        ],
        "title": "System Resources",
        "type": "timeseries"
      }
    ]
  }
}